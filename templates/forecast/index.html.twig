{% extends 'base.html.twig' %}

{% block title %}Forecast index{% endblock %}

{% block body %}
    <h1>Forecast index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Temperature_in_celsius</th>
                <th>UV_index</th>
                <th>Wind</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forecast in forecasts %}
            <tr>
                <td>{{ forecast.id }}</td>
                <td>{{ forecast.date ? forecast.date|date('Y-m-d') : '' }}</td>
                <td>{{ forecast.temperatureInCelsius }}</td>
                <td>{{ forecast.UVIndex }}</td>
                <td>{{ forecast.wind }}</td>
                <td>
                    {% if is_granted('ROLE_FORECAST_SHOW')%}
                        <a href="{{ path('app_forecast_show', {'id': forecast.id}) }}">show</a>
                    {% endif %}

                    {% if is_granted('ROLE_FORECAST_EDIT')%}
                        <a href="{{ path('app_forecast_edit', {'id': forecast.id}) }}">edit</a>
                    {% endif %}

                    {% if is_granted('ROLE_FORECAST_DELETE') %}
                        <form method="post" action="{{ path('app_forecast_delete', {'id': forecast.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forecast.id) }}">
                            <button>delete</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_FORECAST_NEW')%}
        <a href="{{path('app_forecast_new')}}">Create new</a>
    {% endif %}


{% endblock %}
